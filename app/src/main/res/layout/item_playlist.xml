<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="#4A5170"
        android:elevation="0dp"
        app:cardCornerRadius="6dp">
        <ImageView
            android:id="@+id/imv_playlist"
            android:layout_width="100dp"
            android:visibility="visible"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_not_radius" />
<RelativeLayout
    android:id="@+id/relative_playlists"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imv1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_not_radius" />
    <ImageView
        android:id="@+id/imv2"
        android:layout_toRightOf="@id/imv1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_not_radius" />
    <ImageView
        android:layout_below="@id/imv1"
        android:id="@+id/imv3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_not_radius" />
    <ImageView
        android:layout_toRightOf="@id/imv3"
        android:id="@+id/imv4"
        android:layout_below="@id/imv1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_not_radius" />
</RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:id="@+id/name_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@id/cardView"
        android:ellipsize="end"
        android:text="nameArtist"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="@color/color_white" />

    <TextView
        android:fontFamily="sans-serif"
        android:id="@+id/countSongPlaylist"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="countSong"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_playlist"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cardView"
        android:textColor="@color/color_gray" />

</RelativeLayout>